<% if(locals.isLoggedIn){ %>
  <div class="columns is-multiline">
  <% games.forEach((game, key) => { %>
    <div class="column is-one-third-desktop is-half-tablet">
      <div class="card">
        <div class="card-image">
          <figure class="image is-4by4">
          <h1 class="title"><%= games.name %></h1>
            <img src="<%= game.image %>" alt="<%= game.name %>">
          </figure>
        </div>
        <div class="card-content is-8">
          <div class="content">
            <h4 class="title is-4">
              <a href="/games/<%= game.id %>">
                <%= game.name %>
              </a>
             </h4>
             <h6 class="subtitle is-6"><%= game.year %></h6>
            <h6 class="subtitle is-6">Â£<%= game.price && game.price.toFixed(2) %></h6>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>
